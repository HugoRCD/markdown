{
  "name": "default-repository",
  "version": "0.0.2",
  "private": true,
  "description": "default repository for HugoRCD",
  "author": "HugoRCD",
  "funding": "https://github.com/sponsors/HugoRCD",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoRCD/default-repository.git"
  },
  "scripts": {
    "automd": "automd",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bun run lint && changelogen --release --push"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@hrcd/eslint-config": "^0.0.2",
    "automd": "^0.3.7",
    "changelogen": "^0.5.5",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}